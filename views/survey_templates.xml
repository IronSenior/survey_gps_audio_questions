<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="custom_question" inherit_id="survey.page">
            <xpath expr="//div[@class='js_errzone alert alert-danger']" position="before">
                <t t-if="question.type == 'gps'"><t t-call="survey_asl_question.gps"/></t>
                <t t-if="question.type == 'audio'"><t t-call="survey_asl_question.audio"/></t>
            </xpath>
        </template>

        <template id="gps" name="GPS box">
            <input id="response_gps_button" type="hidden" class="form-control" t-att-name="prefix"/>
            <button id="read_gps_button" type="button">Enviar posici√≥n GPS</button>
            <div class="js_infozone alert alert-success" style="display:none;" role="alert"></div>
        </template>

        <template id="audio" name="AUDIO box">
            <input id="read_audio_input" type="hidden" accept="audio/*" class="form-control" t-att-name="prefix" t-att-data-audio_duration="question.audio_duration"/>
            <button id="read_audio_button" type="button">Grabar audio</button>
            <div class="js_infozone alert alert-success" style="display:none;" role="alert"></div>
        </template>

        <!--TODO: Vista de resultado y imprimible-->
    </data>
</odoo>
